{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2016",
        "lib": [
            "es2016",
            "esnext.asynciterable"
        ],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
    },
    // "files": ["src/index.ts"]
    "include": [
        "**/*.ts"
    ]
}